{
  "pluginAlias": "homebridge-google-nest-sdm",
  "pluginType": "platform",
  "customUi": true,
  "customUiPath": "./dist/homebridge-ui",
  "singular": "true",
  "schema": {
    "type": "object",
    "properties": {
      "clientId": {
        "title": "Client ID (e.g. \"780816631155-gbvyo1o7r2pn95qc4ei9d61io4uh48hl.apps.googleusercontent.com\")",
        "type": "string",
        "required": true
      },
      "clientSecret": {
        "title": "Client Secret",
        "type": "string",
        "required": true
      },
      "projectId": {
        "title": "SDM Project ID",
        "type": "string",
        "required": true
      },
      "subscriptionId": {
        "title": "PubSub Subscription (e.g. \"projects/your-gcp-project-id/subscriptions/your-subscription-id\")",
        "type": "string",
        "required": true
      },
      "refreshToken": {
        "title": "Refresh Token",
        "type": "string",
        "required": true
      },
      "gcpProjectId": {
        "title": "GCP Project ID",
        "type": "string",
        "required": false
      },
      "vEncoder": {
        "title": "Video Encoder",
        "type": "string",
        "required": false
      },
      "showFan": {
        "title": "Show Fan Switch",
        "type": "boolean",
        "required": false
      },
      "fanDuration": {
        "title": "Fan duration (in seconds) when turning on the fan.",
        "type": "integer",
        "minimum": 1,
        "maximum": 43200,
        "default": 900,
        "required": false,
        "condition": {
          "functionBody": "return model.showFan"
        }
      }
    }
  }
}
